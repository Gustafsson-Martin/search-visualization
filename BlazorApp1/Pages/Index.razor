@page "/"

<div style="width: 80vw; height: 80vh; border: 1px solid red; display: grid; grid-template-columns: repeat(@SIZE, auto);">
    @for (int row = 0; row <= Grid.GetUpperBound(0); row++) {
        @for (int column = 0; column <= Grid.GetUpperBound(1); column++) {
            int x = row * SIZE + column;
            <div style="border: 1px solid black; background-color: @Grid[row, column].Color()" @onclick="e => click(x)"></div> 
        }
    }
</div>

<button @onclick="start">
    Start
</button>

<button @onclick="ResetGrid">
    Reset
</button>
 
<select @bind="@Algorithm">
    @foreach (var algo in Enum.GetValues(typeof(AlgorithmType))) {
        <option value="@algo">@(@algo.ToString())</option>
    }
</select>